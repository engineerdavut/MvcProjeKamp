@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Heading Id")
    @Html.TextBoxFor(x => x.HeadingId, new { @class = "form-control" })
    @Html.HiddenFor(model => model.HeadingId)
    <br />
    @Html.Label("Heading Name")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    <br />
    @Html.Label("Heading Date")
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />
    @Html.Label("Writer Id")
    @Html.TextBoxFor(x => x.WriterId, new { @class = "form-control" })
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" }))
    <br />
    <button class="btn btn-success">Degisiklikleri kaydet</button>
</div>

            }
